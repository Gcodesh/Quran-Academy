{
    "functions": {
        "api/**/*.php": { "runtime": "vercel-php@0.7.0" },
        "pages/**/*.php": { "runtime": "vercel-php@0.7.0" },
        "includes/**/*.php": { "runtime": "vercel-php@0.7.0" },
        "*.php": { "runtime": "vercel-php@0.7.0" }
    },
    "routes": [
        { "src": "/(.*)", "dest": "/$1" }
    ],
    "env": {
        "DB_HOST": "YOUR_DB_HOST",
        "DB_USER": "YOUR_DB_USER",
        "DB_PASS": "YOUR_DB_PASS",
        "DB_NAME": "YOUR_DB_NAME"
    }
}
