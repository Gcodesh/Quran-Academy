{
    "name": "islamic-education/platform",
    "description": "Islamic Education Platform",
    "type": "project",
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "includes/functions/logger.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "migrate": "php migrations/run.php",
        "seed": "php database/seed.php"
    },
    "config": {
        "optimize-autoloader": true
    }
}